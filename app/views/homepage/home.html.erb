<html>
<head>
<style>
* {
  box-sizing: border-box;
}

body {
  font-family: Arial;
  padding: 10px;
}

/* Header */
.header {
  /*padding: 30px;*/
  text-align: center;
  background: lightgrey;
  font-size: 80px;
}

.column-head-blue {
  background: blue;
  color: white;
}

.header h1 {
  font-size: 50px;
}

/* Create three unequal columns that floats next to each other */
.column {   
  float: center;
  padding: 10px;
}

/* side columns */
.column.side {
  width: 20%;
}

/* center column */
.column.middle {
  width: 60%;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

/* when the screen is less than 800px wide, make the columns stack on top of each other instead of next to each other */
@media screen and (max-width: 800px) {
  .column.side, .column.middle {   
    width: 100%;
  }
}

</style>
</head>
<body>

<div class="header">
    <strong><b>TOM the Tiger's List</b></strong>
</div>

<b>View by: <%= link_to "ALL", home_path %> | <%= link_to "CATEGORIES", categories_path %> </b>
<br>
<div class = "row">
<div class="column side">
  <table class="table">
    
    <thead class="column-head-blue">
    <th>Categories</th>
    </thead>
    
        <tbody>

        <% @category.each do |c| %>
          <tr>
            <td><%= link_to c.title, category_path(c) %></td>
            <td class="text-nowrap">
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>

  <div class="column middle">
    <header>
    <h1>Ad Listings</h1>
    </header>

    <body>        
        <% @ad.each do |ad| %>
          <% if ad.status == "active" %>
            <% if ad.images.attached? %>
              <a href= "<%= ad_path(@category, ad) %>"><p class="ad-button">
                <%= image_tag ad.images[0], width: "150", height: "100" %>
                <br>
                 <%= ad.title %> | <%= ad.created_at.strftime("%m/%d/%Y")%>
                </p> </a>
          <% else %>
            <a href= "<%= ad_path(@category, ad) %>"><p class="ad-button">
            <%= image_tag "no_image.jpg", width: "125", height: "100" %>
            <br>
            <%= ad.title %> | <%= ad.created_at.strftime("%m/%d/%Y")%>
          <% end %>
          <% end %>
        <% end %>
  
      </body>
  </div>


  <div class="column side">
      <h2>Post an Ad and Register</h2>

      <p><%= link_to "Register Here", new_user_path, class: "basic-button basic-button:hover" %></p>

      <p><%= link_to "Post an Ad", new_ad_url(@category.find(1)), class: "basic-button basic-button:hover" %></p>

  </div>
</div>
</div>

</body>
</html>

