<html>
<body>

<div class="header">
    <strong><b>TOM the Tiger's List</b></strong>
</div>

<b>View: <%= link_to "ALL ADS", home_path %> | <%= link_to "CATEGORIES", categories_path %> </b>
<br>
<div class = "row">
<div class="column side">
  <table class="table">
    
    <thead class="column-head-blue">
    <th>Categories</th>
    </thead>
    
        <tbody>

        <% @category.each do |c| %>
          <tr>
            <td><%= link_to c.title, category_path(c) %></td>
            <td class="text-nowrap">
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>

  <div class="column middle">
    <header>
    <h1>Ad Listings</h1>
    </header>

    <body>        
        <% @ad.each do |ad| %>
          <% if ad.status == "active" %>
            <% if ad.images.attached? %>
              <a href= "<%= ad_path(@category, ad) %>"><p class="ad-button">
                <%= image_tag ad.images[0], width: "150", height: "125" %>
                <br>
                 <%= ad.title %> 
                 <br>
                 <%= ad.created_at.strftime("%m/%d/%Y")%>
                </p> </a>
          <% else %>
            <a href= "<%= ad_path(@category, ad) %>"><p class="ad-button">
            <%= image_tag "no_image.jpg", width: "150", height: "125" %>
            <br>
            <%= ad.title %>
            <br>
            <%= ad.created_at.strftime("%m/%d/%Y")%>
            </p> </a>
          <% end %>
          <% end %>
        <% end %>
      </body>
  </div>


  <div class="column side">
      <!-- <h2><b>Post an Ad and Register</b></h2>
      <pre></pre> -->
      <% if !current_user %>
        <p><%= link_to "Register Here", new_user_path, class: "basic-button" %></p>
      <% end %>
      <p><%= link_to "Post an Ad", new_ad_url(@category.find(1)), class: "basic-button" %></p>

  </div>
</div>
</div>

</body>
</html>

