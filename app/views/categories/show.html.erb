<h1>Category: <%= @category.title%></h1>


<table class='table table-hover'>
    <thead class = 'thead thead-dark'>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Posted</th>
        </tr>
    </thead>

    <tbody>
         <% @ads.each do |a|%>
            <tr>
                <td> <%= link_to a.title, ad_path(@category, a) %> </td>
                <td> <%= a.description %> </td>
                <td> <%= a.created_at.strftime("%m/%d/%Y") %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
