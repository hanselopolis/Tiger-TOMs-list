<!DOCTYPE html>
<html>
<style>
    h1 {text-align: center;}
</style>
    <body>
        <header>
            <h1>Category: <%= @category.title %> </h1>
        </header>

        <div class= "row">
            <div class= "column">
                <% @category.ads.each do |ad| %>
                    <% if ad.images.attached? %>
                        <a href= "<%= ad_path(@category, ad) %>"><p class="ad-button">
                            <%= image_tag ad.images[0], width: "250", height: "200" %>
                            <br>
                            <%= ad.title %>
                        </p> </a>
                    <% else %>
                        <a href= "<%= ad_path(@category, ad) %>"><p class="ad-button">
                            <%= image_tag "no_image.jpg", width: "250", height: "200" %>
                            <br>
                            <%= ad.title %>
                    <% end %>
                <% end %>
            </div>
        </div>
    
        <a href= "<%=  categories_path%>">
                        <p class= "basic-button", style= "text-align: right;">< Back<p>
                    </a>

        <a href= "<%=  new_ad_path(@category)%>">
                        <p class= "basic-button", style= "text-align: right;">Post an Ad<p>
                    </a>
    </body>

</html>
