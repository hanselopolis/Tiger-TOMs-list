<h1>Purchases</h1>

<table class="table table-hover">
  
  <thead class="thead-dark">
    <tr>
      <th>Card Type</th>
      <th>Order #</th>
      <th>Purchaser ID</th> 
    </tr>
  </thead>

  <tbody>
    <% @purchase.each do |p| %>
    <tr>
      <td><%= p.card_type %></td>
      <td><%= p.id %></td>
      <td><%= p.ads.purchaser %></td>
    </tr>
    <% end %>
  </tbody>

</table>