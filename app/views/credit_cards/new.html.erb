<%= bootstrap_form_with model: @credit_card,  method: :post, url: credit_card_path(@user), local: true do |cc| %>
<div class = "row needs-validation" novalidate  >
<div class = "column col-lg-5 position-relative">
<div class= "column-head-blue" ><h3><center>Enter New Credt Card Information</center></h3></div>
<div class="form-floating">
    <input class="form-control" id="credit_card_name" name="credit_card[name]" placeholder="Name" type="string" value= '<%= current_user.first_name %> <%= current_user.last_name %>' required>
    <input class="form-control" id="credit_card_name" name="credit_card[company]" placeholder="Company Name (optional)" type="string" >
    <input class="form-control" id="credit_card_number" name="credit_card[number]" placeholder="Number: ####-####-####-####" type="string" required>
    <input class="form-control" id="credit_card_cvv" name="credit_card[cvv]" placeholder="CVV: ###" type="number" required> 
    <input class="form-control" id="credit_card_exp_date" name="credit_card[exp_date]" placeholder="Expiration Date: ##/##/####" type="date" required>
    <select class="form-select" name="credit_card[card_type]"id="credit_card_card_type" type="string" required>
        <option value="Visa">Visa</option>
        <option value="MasterCard">MasterCard</option>
        <option value="American Express">American Express</option>
    </select>
</div> 
<br>

<%= cc.submit "Add New Credit Card"%>

<% end %>
</div></div>
