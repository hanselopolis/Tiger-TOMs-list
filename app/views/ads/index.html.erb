<h1>Search results template</h1>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Post Date</th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |a| %>
      <tr>
        <td><%= link_to a.title, ad_path(a.category, a) %></td>
        <td> <%= a.email %> </td>
        <td> <%= a.created_at.strftime("%m/%d/%Y") %> </td>
        <td class="text-nowrap"></td>
      </tr>
    <% end %>
  </tbody>
</table>