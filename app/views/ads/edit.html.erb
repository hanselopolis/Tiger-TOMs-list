<style>
h1 {text-align: center;}
</style>
<h1>Edit Ad: <%= @ad.title %></h1>

<%= bootstrap_form_with model: @ad, method: :patch, url: ad_path(@category, @ad), local: true do |f| %>
<div class = "form-row">
    
    <div class = column>
        <h3>Current Images</h3>

        <% (0...@ad.images.count).each do |image| %>
            <div style = "width:300px; height:300px;">
                <%= image_tag @ad.images[image], style: "width:100%; height: auto" %>
            </div>
        <% end %>
    </div>
</div>
<div class = "form-row">
    <div class = "column">
        
        <%= f.file_field :images, multiple: true %>
        <%= f.file_field :images, multiple: true %>
        <%= f.file_field :images, multiple: true %>
        <%= f.file_field :images, multiple: true %>   
        <%= f.text_field :title%>
        <%= f.number_field(:price, :step => "0.01") %>
        <%= f.collection_select(:category_id, Category.all, :id, :title) %>
        <%= f.text_area :description %>

    </div>

   <div class = "column offset-md-3"> 

        <%= f.text_field :email %>
        <%= f.text_field :phone %>
        <%= f.text_field :addr%>
        <%= f.text_field :city %>
        <%= f.text_field :state %>
        <%= f.text_field :zip %>

    </div>

    <div class = "form-column"> 
        <%= f.submit %>
        <a href= "<%= category_url(@category)%>", style= "float: right;",
        class= "btn btn-danger">Cancel</a>
    </div>
</div>
<% end %>
<br>
