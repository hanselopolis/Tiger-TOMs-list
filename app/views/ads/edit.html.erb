<style>
h1 {text-align: center;}
</style>
<h1>Create a New Ad</h1>

<%= bootstrap_form_with model: @ad, method: :patch, url: ad_path(@category, @ad), local: true do |f| %>
<div class = "form-row">
    <h3>Current Images</h3>
    <div class = column>
    </div>
</div>
<div class = "form-row">
    <div class = "column">

        <%= f.file_field :images, multiple: true %>
        <%= f.text_field :title%>
        <%= f.number_field(:price, :step => "0.01") %>
        <%= f.collection_select(:category_id, Category.all, :id, :title) %>
        <%= f.text_area :description %>

    </div>

   <div class = "column offset-md-3"> 

        <%= f.text_field :email %>
        <%= f.text_field :phone %>
        <%= f.text_field :addr%>
        <%= f.text_field :city %>
        <%= f.text_field :state %>
        <%= f.text_field :zip %>

    </div>

    <div class = "form-column"> 
        <%= f.submit %>
        <a href= "<%= category_url(@category)%>", style= "float: right;",
        class= "btn btn-danger">Cancel</a>
    </div>
</div>
<% end %>
<br>
