<table align ="right">

    <thead>
        <tr>
            <th> <%= @user.username %> </th>
        <tr>
    </thead>

    <tbody>
        <tr>
            <td> <%= @user.first_name%> <%= @user.last_name %> </td>
        </tr>
        <tr>
            <td> Email: <%= @user.email %> </td>
        </tr>
        <tr>
            <td> Street Address 1: <%= @user.address1 %> </td>
        </tr>
        <tr>
            <td> Street Address 2: <%= @user.address2 %> </td>
        </tr>
        <tr>
            <td> Street Address 3: <%= @user.address3 %> </td>
        </tr>
        <tr>
            <td> City: <%= @user.city%> </td>
        </tr>
        <tr>
            <td> State: <%= @user.state%> </td>
        </tr>
        <tr>
            <td> Country: <%= @user.country %> </td>
        </tr>
        <tr>
            <td> ZIP Code: <%= @user.zip %>
        </tr>
        <tr>
        <% if @user == current_user %>
            <td><%= link_to "Favorites", favorites_path() , class: "btn btn-primary" %></td>
            <td><%= link_to "Edit Profile", edit_user_path(@user) , class: "btn btn-primary" %></td>
            <td><%= link_to "Change Password", edit_user_registration_path, class: "btn btn-primary" %></td>
            <td><%= link_to "My Posts", user_ads_path(@user), class: "btn btn-primary"%></td>
        <%end%>
        </tr>
    </tbody>
</table>


<p>

Bio:<%= simple_format(@user.bio) %>
</p>



