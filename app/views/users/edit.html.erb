<h1> Edit User Account </h1>

<%= bootstrap_form_with model: @user, url: user_path(@user), method: :patch, local: true do |u| %>

<%= u.text_field :username %>
<%= u.text_field :first_name %>
<%= u.text_field :last_name %>
<%= u.text_field :address1 %>
<%= u.text_field :address2 %>
<%= u.text_field :address3 %>
<%= u.text_field :city %>
<%= u.text_field :state %>
<%= u.number_field :zip %>
<%= u.text_field :country %>
<%= u.text_area :bio %>
<%= u.text_field :password %>
<%= u.submit nil, class: 'btn btn-primary' %>

<% end %>

 <td><%= link_to "Delete", user_path(@user), method: :delete, class: "btn btn-danger" %></td>


