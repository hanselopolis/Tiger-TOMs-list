            <td> Street Address 3: <%= @user.address3 %> </td>
        </tr>
        <tr>
            <td> City: <%= @user.city%> </td>
        </tr>
        <tr>
            <td> State: <%= @user.state%> </td>
        </tr>
        <tr>
            <td> Country: <%= @user.country %> </td>
        </tr>
        <tr>
            <td> ZIP Code: <%= @user.zip %></td>
        </tr>
        <tr>
            <td> Bio: <%= @user.bio%> </td>
        </tr>
        
